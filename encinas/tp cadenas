palabra=input("Ingrese una palabra")
letra=input("Ingrese una letra")
contador=0
for i in palabra:
   if i ==letra :
       contador=contador+1
print(contador)


palabra= input("Ingrese una palabra")
contador= 0
for i in palabra:
   if i=="a" or i=="e" or i=="i" or i=="o" or i=="u":
       contador= contador+1
print(contador)


cadena = input("Ingrese una palabra")
letra = input("Ingrese una letra")
cadena_modificada= cadena.replace(letra,"*")
print("la cadena modifica es:", cadena_modificada





